<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_button"
                style="@style/Text" />
            <com.aksiku.custom.RecyclingImageView
                android:id="@+id/img_pp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:contentDescription="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/UkuranKarakterKecil"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                style="@style/Text" />
            <TextView
                android:id="@+id/lbl_poin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:singleLine="false"
                android:gravity="center"
                android:background="@drawable/bg_button"
                style="@style/Text" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/general_rounded_box"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <com.aksiku.custom.RecyclingImageView
                        android:layout_width="@dimen/UkuranBadge"
                        android:layout_height="@dimen/UkuranBadge"
                        android:src="@drawable/ic_koin_bronze"
                        android:contentDescription="" />
                    <TextView
                        android:id="@+id/lbl_poin_bronze"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        style="@style/Text" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <com.aksiku.custom.RecyclingImageView
                        android:layout_width="@dimen/UkuranBadge"
                        android:layout_height="@dimen/UkuranBadge"
                        android:src="@drawable/ic_koin_silver"
                        android:contentDescription="" />
                    <TextView
                        android:id="@+id/lbl_poin_silver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        style="@style/Text" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <com.aksiku.custom.RecyclingImageView
                        android:layout_width="@dimen/UkuranBadge"
                        android:layout_height="@dimen/UkuranBadge"
                        android:src="@drawable/ic_koin_gold"
                        android:contentDescription="" />
                    <TextView
                        android:id="@+id/lbl_poin_gold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        style="@style/Text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.aksiku.custom.RecyclingImageView
        android:id="@+id/img_karakter"
        android:layout_width="@dimen/UkuranKarakterKecil"
        android:layout_height="@dimen/UkuranKarakterKecil"
        android:scaleType="fitXY"
        android:contentDescription="" />
</LinearLayout>