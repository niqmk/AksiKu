            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_box"
            style="@style/Text" />
    </LinearLayout>
    <LinearLayout
