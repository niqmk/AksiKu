<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lay_map_score"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/general_rounded_box"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.aksiku.custom.RecyclingImageView
                android:layout_width="@dimen/UkuranBadge"
                android:layout_height="@dimen/UkuranBadge"
                android:src="@drawable/ic_koin_bronze"
                android:contentDescription="" />
            <TextView
                android:id="@+id/lbl_poin_bronze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                style="@style/Text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.aksiku.custom.RecyclingImageView
                android:layout_width="@dimen/UkuranBadge"
                android:layout_height="@dimen/UkuranBadge"
                android:src="@drawable/ic_koin_silver"
                android:contentDescription="" />
            <TextView
                android:id="@+id/lbl_poin_silver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                style="@style/Text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.aksiku.custom.RecyclingImageView
                android:layout_width="@dimen/UkuranBadge"
                android:layout_height="@dimen/UkuranBadge"
                android:src="@drawable/ic_koin_gold"
                android:contentDescription="" />
            <TextView
                android:id="@+id/lbl_poin_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                style="@style/Text" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <com.aksiku.custom.RecyclingImageView
            android:id="@+id/img_karakter"
            android:layout_width="@dimen/UkuranBadge"
            android:layout_height="@dimen/UkuranBadge"
            android:scaleType="fitXY"
            android:contentDescription="" />
    </LinearLayout>
</LinearLayout>